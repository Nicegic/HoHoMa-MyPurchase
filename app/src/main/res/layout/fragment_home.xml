<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.nicolasmischke.hohoma.fragments.Home"
    tools:ignore="LabelFor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true">

    <ImageView
        android:id="@+id/offerPicture1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@android:drawable/ic_menu_view"
        android:contentDescription="@string/special_offer" />

    <TextView
        android:id="@+id/offerText1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="@string/special_offer" />

    <ImageView
        android:id="@+id/offerPicture2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_column="0"
        android:layout_row="1"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@android:drawable/ic_menu_view"
        android:contentDescription="@string/special_offer" />

    <TextView
        android:id="@+id/offerText2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="@string/special_offer" />

    <ImageView
        android:id="@+id/offerPicture3"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@android:drawable/ic_menu_view"
        android:contentDescription="@string/special_offer" />

    <TextView
        android:id="@+id/offerText3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_column="1"
        android:text="@string/special_offer" />

    <TextView
        android:id="@+id/shoppinglistheader_home"
        android:layout_marginTop="10dp"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/shoppinglistheader"
        android:textSize="@dimen/headerTextSize"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:inputType="none" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/homeshoppinglist"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        />
</GridLayout>
